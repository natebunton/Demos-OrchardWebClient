@model Demos.Orchard.WebClient.ViewModels.EmployeesViewModel
@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>

@if (Model.Employees != null)
{
    foreach (var employee in Model.Employees)
    {
        <div class="row margin-bottom-20px">
            <div class="col-xs-4 col-sm-2 text-center">
                @if (employee.Avatar != null && employee.Avatar.Data != null && !string.IsNullOrEmpty(employee.Avatar.MimeType))
                {
                    var base64 = Convert.ToBase64String(employee.Avatar.Data);
                    var imgSrc = string.Format("data:{0};base64,{1}", employee.Avatar.MimeType, base64);
                    var alt = string.Format("{0} - Avatar", employee.Name);

                    <img src="@imgSrc" alt="@alt" class="img-responsive center-horizontal" />
                }
                <label>@employee.Name</label>
            </div>
            <div class="col-xs-8 col-sm-10">
                <dl class="dl-horizontal">
                    <dt>Job Title:</dt>
                    <dd>@employee.JobTitle</dd>
                    <dt>Department:</dt>
                    <dd>@employee.Department</dd>
                    <dt>Bio:</dt>
                    <dd>@Html.Raw(employee.Bio)</dd>
                </dl>
            </div>
        </div>

    }
}

